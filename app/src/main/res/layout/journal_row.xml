<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:elevation="10dp"
        android:gravity="right"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/journal_share_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"


            tools:src="@android:drawable/ic_menu_share" />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/journal_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/image_one"
            />

        <TextView
            android:id="@+id/journal_title_list"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:hint="Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/journal_thought_list"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:hint="Thoughts"

            android:textSize="18sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/journal_timestamp"
            android:textStyle="italic"
            android:paddingStart="12dp"
            android:hint="Date"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>